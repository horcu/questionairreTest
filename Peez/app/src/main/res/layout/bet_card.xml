<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bet_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/darker_gray">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="#OrigamiPunaniMurdera"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="12     | $145"-->
                    <!--android:layout_alignParentEnd="true"/>-->


            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend"
                android:layout_below="@+id/user_info"
                android:layout_width="70dp"
                android:layout_margin="0dp"
                android:layout_height="60dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#dddddd"
                android:src="@drawable/joe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="right"
                android:textColor="@android:color/holo_green_light"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:text="$5"/>


            <LinearLayout
                android:id="@+id/bet_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friend"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="rob"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="5dp"
                        android:text="Joe Flacco"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:text="Throws for less than 350yds"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:text="Has at least 2 ints"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="1dp"
                        android:layout_weight="4"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:text="\@"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/bengals_home"
                        android:layout_marginRight="0dp"

                        android:layout_gravity="right|center_vertical"/>

                </LinearLayout>

            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bet_info"
    android:layout_marginTop="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#4caf50"
        android:background="#ffffff"
        android:text="accept"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#d1d1d1"
        android:background="#ffffff"
        android:text="park"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#8F5656"
        android:background="#ffffff"
        android:text="decline"/>
</LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>