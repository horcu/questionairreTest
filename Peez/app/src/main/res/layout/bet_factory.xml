<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bet"
            type="com.horcu.apps.peez.backend.models.betApi.model.Bet" />
    </data>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <include
                layout="@layout/peez_bar"
                android:id="@+id/peezbar"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <!--Friends list Listview-->
            <LinearLayout
                android:id="@+id/friends_reg_layout"
                android:layout_below="@+id/peezbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey"
                android:visibility="visible"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginBottom="50dp"
                    android:padding="2dp"
                    android:choiceMode="multipleChoice"
                    android:visibility="gone">

                </ListView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/daddy_dute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_below="@+id/peezbar"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginBottom="-50dp"
                android:orientation="vertical">

                <!--<com.greenfrvr.rubberloader.RubberLoaderView-->
                <!--android:id="@+id/loader2"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_gravity="center|center_vertical"-->
                <!--app:loaderExtraColor="@color/colorPrimary"-->
                <!--app:loaderPrimeColor="@color/colorPrimaryDark" />-->

                <!--player or team or conference or division as bet bait-->
                <LinearLayout
                    android:id="@+id/user_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/user_name_layout_inner"
                        android:layout_width="match_parent"
                        android:layout_height="75dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/chosen_player_team"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:src="@drawable/ic_player" />

                        <Button
                            android:id="@+id/player_team"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Anquon Boldin"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:background="@android:color/transparent" />


                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/when"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="vs Detroit Lions" />


                    </LinearLayout>

                    <ListView
                        android:id="@+id/other_players_list"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                    </ListView>

                </LinearLayout>

                <!--stats to bet with/against-->
                <LinearLayout
                    android:id="@+id/stat_layout"
                    android:layout_below="@+id/user_name_layout"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_tagmaker_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/bet_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:hint="will record"
                            android:layout_weight="3"
                            android:background="@android:color/transparent" />

                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/equality"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:hint="more than"
                            android:layout_weight="1"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/numbers"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textSize="16sp"
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:textColor="@color/colorAccent"
                            android:text="250" />

                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/stat_element"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:hint="tds" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/hashtag_bet_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <!--verbs -->
                        <com.greenfrvr.hashtagview.HashtagView
                            android:id="@+id/hashtagview"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/HashtagView"
                            app:tagBackground="@drawable/item_bg"
                            app:tagForeground="@drawable/flat_button_light"
                            app:tagPaddingBottom="@dimen/padding_vertical"
                            app:tagPaddingLeft="@dimen/padding_horizontal"
                            app:tagPaddingRight="@dimen/padding_horizontal"
                            app:tagPaddingTop="@dimen/padding_vertical"
                            app:tagTextColor="#E5E5E5" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/people_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <!--who to bet layout-->
                    <LinearLayout
                        android:id="@+id/bet_who_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:src="@drawable/ic_social_people"
                            android:layout_marginRight="10dp" />


                        <TextView
                            android:id="@+id/users_groups_betting"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:background="?android:attr/selectableItemBackground"
                            android:text="Who are you betting ?" />


                    </LinearLayout>

                    <!--amount to bet-->
                    <LinearLayout
                        android:id="@+id/bet_amount_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/bet_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How much?"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp"
                            android:background="?android:attr/selectableItemBackground" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:src="@drawable/ic_money"
                            android:layout_marginRight="6dp" />

                    </LinearLayout>


                </LinearLayout>


                <!--list of selected friends-->
                <LinearLayout
                    android:layout_below="@+id/people_money"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friends_reg_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/current_bets"
                android:layout_width="match_parent"
                android:background="@color/main"
                android:visibility="gone"
                android:layout_height="wrap_content">


            </android.support.v7.widget.RecyclerView>

            <include
                layout="@layout/bet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/peezbar"
                android:id="@+id/tester" />

            <!--<include layout="@layout/bet2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/tester"-->
            <!--android:id="@+id/tester2"/>-->
            \

            <!--this is temperary just for show -->

            <View
                android:id="@+id/bottom_spacer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="16dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true">

                <!--action buttons-->
                <LinearLayout
                    android:id="@+id/action_layout"
                    android:layout_below="@id/bottom_spacer"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_height="50dp">

                    <Button
                        android:id="@+id/clear_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="delete" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        android:background="@color/white"
                        android:text="schedule" />

                    <Button
                        android:id="@+id/send_bet"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:text="send" />

                </LinearLayout>

                <!--player list done button-->
                <LinearLayout
                    android:id="@+id/players_list_done"
                    android:layout_width="match_parent"
                    android:layout_below="@id/bottom_spacer"
                    android:layout_height="50dp"
                    android:gravity="bottom"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp">

                    <Button
                        android:id="@+id/done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="done choosing"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:background="@color/white"
                        android:layout_gravity="right|bottom"
                        android:visibility="invisible" />

                </LinearLayout>

                <!--bet card completed buttons-->
                <LinearLayout
                    android:id="@+id/done_discard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:visibility="visible"
                    android:layout_below="@id/bottom_spacer"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/discard"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-thin"
                        android:visibility="visible"
                        android:background="@color/white"
                        android:text="discard" />

                    <Button
                        android:id="@+id/createTag"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:background="@color/white"
                        android:text="done" />


                </LinearLayout>

                <!--add new button-->
                <LinearLayout
                    android:id="@+id/add_new_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="bottom"
                    android:layout_below="@id/bottom_spacer"
                    android:layout_marginBottom="-50dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/add_new_bet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="New" />


                </LinearLayout>

            </FrameLayout>


        </RelativeLayout>


    </ScrollView>


</layout>