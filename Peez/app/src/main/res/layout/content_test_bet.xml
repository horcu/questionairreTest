<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_test_bet"
    tools:context=".ui.activities.BetActivity"
    android:layout_height="match_parent">

    <!--player or team or conference or division as bet bait-->
    <LinearLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_name_layout_inner"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"

            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chosen_player_team"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/ic_player"/>



            <Button
                android:id="@+id/player_team"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Joe Flacco"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <ListView
            android:id="@+id/other_players_list"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <!--stats to bet with/against-->
    <LinearLayout
        android:id="@+id/stat_layout"
        android:layout_below="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_action_label_outline"/>

            <Button
                android:id="@+id/bet_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What are you betting on?"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="100"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hashtag_bet_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <!--verbs -->
            <com.greenfrvr.hashtagview.HashtagView
                android:id="@+id/hashtagview"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HashtagView"
                app:tagBackground="@drawable/item_bg"
                app:tagForeground="@drawable/flat_button_light"
                app:tagPaddingBottom="@dimen/padding_vertical"
                app:tagPaddingLeft="@dimen/padding_horizontal"
                app:tagPaddingRight="@dimen/padding_horizontal"
                app:tagPaddingTop="@dimen/padding_vertical"
                app:tagTextColor="#E5E5E5"/>

            <!--Action verbs-->
            <com.greenfrvr.hashtagview.HashtagView
                android:id="@+id/hashtagview_action_verbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HashtagView"
                app:tagBackground="@drawable/item_bg"
                app:tagForeground="@drawable/flat_button_light"
                app:tagPaddingBottom="@dimen/padding_vertical"
                app:tagPaddingLeft="@dimen/padding_horizontal"
                app:tagPaddingRight="@dimen/padding_horizontal"
                app:tagPaddingTop="@dimen/padding_vertical"
                app:tagTextColor="#E5E5E5"/>

            <!--when-->
            <com.greenfrvr.hashtagview.HashtagView
                android:id="@+id/hashtagview_when"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HashtagView"
                app:tagBackground="@drawable/item_bg"
                app:tagForeground="@drawable/flat_button_light"
                app:tagPaddingBottom="@dimen/padding_vertical"
                app:tagPaddingLeft="@dimen/padding_horizontal"
                app:tagPaddingRight="@dimen/padding_horizontal"
                app:tagPaddingTop="@dimen/padding_vertical"
                app:tagTextColor="#E5E5E5"/>

        </LinearLayout>


    </LinearLayout>

    <!--amount to bet-->
    <LinearLayout
        android:id="@+id/bet_amount_layout"
        android:layout_below="@+id/stat_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_money"/>


        <Button
            android:id="@+id/bet_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="How much?"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"/>



    </LinearLayout>

    <!--who to bet layout-->
    <LinearLayout
        android:id="@+id/bet_who_layout"
        android:layout_below="@+id/bet_amount_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/ic_social_people"
            android:layout_marginRight="10dp"/>


        <Button
            android:id="@+id/users_groups_betting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:text="Who are you betting ?"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"/>

    </LinearLayout>

    <!--list of selected friends-->
    <LinearLayout
        android:layout_below="@+id/bet_who_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/friends_reg_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text=""/>

    </LinearLayout>

    <!--Friends list Listview-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginBottom="50dp"
            android:padding="2dp"
            android:visibility="gone"
            >

        </ListView>


        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="done choosing"
            android:layout_marginTop="-50dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
          />

    </LinearLayout>

    <!--action buttons-->
    <LinearLayout
    android:id="@+id/action_layout"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_alignParentBottom="true"
    android:visibility="visible"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/clear_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:text="CLEAR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:background="@color/white"
        android:text="SCHEDULE"/>

    <Button
        android:id="@+id/send_bet"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="1"
        android:text="SEND"/>
</LinearLayout>

</RelativeLayout>
