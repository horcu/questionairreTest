<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_test_bet"
    tools:context="com.horcu.apps.peez.ui.activities.TestBetActivity"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/player_team"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Peyton Manning"
            android:hint="What player or team are you betting on?"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/stat_layout"
        android:layout_below="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/bet_stats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Stat text..     eg. > 2 ints"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bet_amount_layout"
        android:layout_below="@+id/stat_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/bet_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15"
            android:hint="How much are you willing to bet on this?"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bet_who_layout"
        android:layout_below="@+id/bet_amount_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/users_groups_betting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:text="Who are you betting ? regIds/public"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"/>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="10px"
            android:src="@drawable/ic_social_people"
            android:layout_marginRight="16dp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/bet_who_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/friends_reg_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="50dp"
            android:padding="2dp"
            android:visibility="gone"
            >

        </ListView>


        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="done choosing"
            android:layout_marginTop="-50dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
          />




    </LinearLayout>

<LinearLayout
    android:id="@+id/action_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    android:visibility="visible"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/clear_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="1"
        android:text="CLEAR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:text="SCHEDULE"/>

    <Button
        android:id="@+id/send_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="1"
        android:text="SEND"/>
</LinearLayout>


</RelativeLayout>
