<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_test_bet"
    tools:context="com.horcu.apps.peez.ui.activities.TestBetActivity">


    <LinearLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/player_team"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="What player or team are you betting on?"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/stat_layout"
        android:layout_below="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/bet_stats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Stat text..     eg. > 2 ints"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bet_amount_layout"
        android:layout_below="@+id/stat_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/bet_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="How much are you willing to bet on this?"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bet_who_layout"
        android:layout_below="@+id/bet_amount_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/users_groups_betting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Who are you betting ? regIds/public"/>

    </LinearLayout>

<LinearLayout
    android:id="@+id/action_layout"
    android:layout_below="@+id/bet_who_layout"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:layout_alignParentEnd="true"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/clear_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="left"
        android:text="CLEAR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="SCHEDULE"/>

    <Button
        android:id="@+id/send_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        android:text="SEND"/>
</LinearLayout>


</RelativeLayout>
