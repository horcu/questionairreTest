<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_prelim"
    tools:context="com.horcu.apps.peez.ui.fragments.PrelimActivityFragment">


    <com.greenfrvr.rubberloader.RubberLoaderView
        android:id="@+id/loader1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="18dp"
        app:loaderExtraColor="@color/colorPrimary"
        app:loaderPrimeColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loader1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="gettin' shit done boss.."/>

</RelativeLayout>
