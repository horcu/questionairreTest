<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable name="bet" type="com.horcu.apps.peez.backend.models.betApi.model.Bet" />


    </data>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <!--&lt;!&ndash;Friends list Listview&ndash;&gt;-->
            <!--<LinearLayout-->
                <!--android:id="@+id/friends_reg_layout"-->
                <!--android:layout_below="@+id/peezbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/light_grey"-->
                <!--android:visibility="visible"-->
                <!--android:orientation="vertical">-->



            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/daddy_dute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@color/white"
                android:orientation="vertical">

                <!--player or team or conference or division as bet bait-->
                <LinearLayout
                    android:id="@+id/user_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <ImageView
                                android:id="@+id/chosen_player_team"
                                android:layout_width="60dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:scaleType="centerInside"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_player" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/player_team"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Preston Brown"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif-condense"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:textStyle="bold"
                                    android:background="@android:color/transparent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                    android:text="WR - San francisco 49ers"/>


                        </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="center"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:textStyle="bold|italic"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="$45.00"/>
                            </LinearLayout>


                    </LinearLayout>



                </LinearLayout>

                <!--stats to bet with/against-->
                <LinearLayout
                    android:id="@+id/stat_layout"
                    android:layout_below="@+id/user_name_layout"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_tagmaker_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/bet_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:hint="will record"
                            android:fontFamily="sans-serif-condense"
                            android:layout_weight="1"
                            android:background="@android:color/transparent" />

                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/equality"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:hint="more than"
                            android:fontFamily="sans-serif-condense"
                            android:layout_weight="1"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/numbers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-condense"
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="250" />

                        <com.horcu.apps.peez.spinner.NiceSpinner
                            android:id="@+id/stat_element"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"

                            android:fontFamily="sans-serif-condense"
                            android:background="@android:color/transparent"
                            android:hint="sacks" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/people_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">



                </LinearLayout>


                <!--list of selected friends-->
                <LinearLayout
                    android:layout_below="@+id/people_money"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friends_reg_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >


                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/peez_bar"
                android:id="@+id/peezbar"
                android:layout_below="@+id/daddy_dute"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp" />

            <!--who to bet layout-->
            <LinearLayout
                android:id="@+id/bet_who_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/peezbar"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/select_opp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_social_people"/>

                    <TextView
                        android:id="@+id/users_groups_betting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condense"
                        android:layout_marginLeft="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="Group" />



                    <TextView
                        android:id="@+id/users_groups_betting_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"

                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-thin"
                        android:layout_marginLeft="20dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="click to add or invite friends to play" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="10"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_content_add"/>


                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/selected_users_grid"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="3dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.horcu.apps.peez.custom.LetterImageView
                                android:id="@+id/friend_1"
                                android:layout_height="35dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="35dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/friend_1_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Info about user"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="100"/>

                            <Button
                                android:id="@+id/bet_amount_4"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:text="20"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical|right"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condense"
                                android:textStyle="bold"
                                android:background="?android:attr/selectableItemBackground" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <com.horcu.apps.peez.custom.LetterImageView
                                android:id="@+id/friend_2"
                                android:layout_height="35dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical|right"
                                android:gravity="center"
                                android:layout_width="35dp" />

                            <TextView
                                android:id="@+id/friend_2_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Info about user"/>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="10"/>

                            <Button
                                android:id="@+id/bet_amount_3"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:text="25"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condense"
                                android:textStyle="bold"
                                android:background="?android:attr/selectableItemBackground" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <com.horcu.apps.peez.custom.LetterImageView
                                android:id="@+id/friend_3"
                                android:layout_height="35dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical|right"
                                android:gravity="center"
                                android:layout_width="35dp" />
                            <TextView
                                android:id="@+id/friend_3_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Info about user"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="100"/>

                            <Button
                                android:id="@+id/bet_amount_1"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:text="15"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical|right"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condense"
                                android:textStyle="bold"
                                android:background="?android:attr/selectableItemBackground" />
                        </LinearLayout>

                    </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="empty group :("/>

            </LinearLayout>

            <!--amount to bet-->
            <!--<LinearLayout-->
                <!--android:id="@+id/bet_amount_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:visibility="gone"-->
                <!--android:layout_below="@+id/bet_who_layout"-->
                <!--android:layout_marginBottom="55dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:background="@color/white"-->
                <!--android:orientation="horizontal">-->


                <!--<Button-->
                    <!--android:id="@+id/bet_amount"-->

                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:text="price"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="16sp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:gravity="center"-->
                    <!--android:fontFamily="sans-serif-condense"-->
                    <!--android:textStyle="bold"-->
                    <!--android:background="?android:attr/selectableItemBackground" />-->

            <!--</LinearLayout>-->


            <View
                android:id="@+id/bottom_spacer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:layout_alignParentBottom="true"
                android:background="@color/light_grey"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="16dp" />

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <!--action buttons-->
            <LinearLayout
            android:id="@+id/action_layout"
            android:layout_below="@id/bottom_spacer"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_height="50dp">

            <Button
            android:id="@+id/clear_bet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:text="delete" />

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:text="schedule" />

            <Button
            android:id="@+id/send_bet"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="send" />

            </LinearLayout>

                <!--bet card completed buttons-->
            <LinearLayout
            android:id="@+id/done_discard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:visibility="visible"
            android:layout_below="@id/bottom_spacer"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
            android:id="@+id/discard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="14sp"
                android:textColor="@color/black"
            android:fontFamily="sans-serif-condense"
            android:visibility="visible"
            android:background="@color/white"
            android:text="discard" />

            <Button
            android:id="@+id/createTag"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condense"
            android:visibility="visible"
            android:background="@color/white"
            android:text="done" />


            </LinearLayout>



            </FrameLayout>




        </RelativeLayout>


    </ScrollView>


</layout>