<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <data>

        <variable
            name="user"
            type="com.horcu.apps.peez.viewmodel.UserViewModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="25dp"
        android:padding="5dp"
        app:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        android:layout_gravity="right"
        app:contentPadding="10dp"
        app:cardBackgroundColor="#FFeeefff"
        android:background="#FFeeefff">


        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <!--<com.horcu.apps.peez.chat.LeBubbleTextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:padding="3dp"-->
            <!--app:bubbleTextColor="#777777"-->
            <!--app:bubbleText="@{user.lastName}"-->
            <!--app:bubbleArrowDirection="left"-->
            <!--app:bubbleBackgroundColor="#eeefff"-->
            <!--app:bubbleBackgroundPressColor="@color/white"-->
            <!--app:bubbleCornerRadius="3dp"-->
            <!--android:gravity="start"-->
            <!--app:bubbleTextSize="15sp"-->
            <!--app:bubbleTitleText="@{user.firstName}" >-->

        <!--</com.horcu.apps.peez.chat.LeBubbleTextView>-->


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_user_name"
                android:fontFamily="sans-serif-thin"
                android:textSize="12sp"
                android:textColor="#777777"
                android:text="@{user.firstName}"
                tools:text="Hello"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/item_user_name"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:textSize="16sp"
            android:textColor="#777777"
            android:layout_marginTop="15dp"
            android:id="@+id/item_user_surname"
            android:text="@{user.lastName}"
            tools:text="World"
            />


    </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>