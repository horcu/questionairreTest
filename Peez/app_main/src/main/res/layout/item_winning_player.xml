<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/tools" >

    <data>
        <variable
            name="playerVm"
            type="com.horcu.apps.peez.viewmodel.PlayerViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#fff"
        app:contentPadding="4dp"
        app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp" >

        <com.horcu.apps.peez.custom.UserImageView
            android:id="@+id/user_img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            app:imageUrl="@{playerVm.model.imageUri}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="0dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/item_user_surname"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            android:textColor="#ff222222"
            android:layout_margin="2dp"
            emojicon:emojiconAlignment="baseline"
            android:layout_width="wrap_content"
            android:text="@{playerVm.model.userName}"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_user_name"
                android:fontFamily="sans-serif-thin"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@{playerVm.model.email}"
                tools:text="Hello"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:alpha=".5"
                android:visibility="visible"
                android:src="@drawable/ic_navigation_close"/>

       </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:alpha=".7"
            android:background="@color/light_grey"/>
    </LinearLayout>

</layout>