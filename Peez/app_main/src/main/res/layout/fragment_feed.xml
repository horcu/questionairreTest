<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="playersVM"
            type="com.horcu.apps.peez.viewmodel.PlayersViewModel"/>

        <variable
            name="view"
            type="com.horcu.apps.peez.view.FeedView"/>
    </data>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FeedView">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/feeds_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="loading feeds....."/>

    <RelativeLayout
        android:id="@+id/feeds_main"
        android:layout_below="@+id/feeds_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/players_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:items="@{playersVM.playersVMs}"
            app:clickHandler="@{view.playerClicked}"
            app:itemViewBinder="@{view.itemViewBinder}">

        </android.support.v7.widget.RecyclerView>

        <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/feed_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:indicator="BallPulse"
            android:layout_centerInParent="true"
        app:indicator_color="#898989"
        />

    </RelativeLayout>

</RelativeLayout>
    </layout>
