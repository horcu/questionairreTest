<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/opponent_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/opponent_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_social_people"
            android:visibility="visible"
            app:mli_letter="O"
            app:mli_shape_type="circle"
            app:mli_letter_color="@color/bub"
            app:mli_shape_color="@color/grey_mid"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/opponent_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/bub"
            android:text="@string/select_an_opponent"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginRight="16dp">

        <include layout="@layout/layout_player_menu" />

    </LinearLayout>


</LinearLayout>