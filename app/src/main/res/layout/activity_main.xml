<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hcummings.questionairretest.MainActivity">

    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ebebeb">

        <ImageView
            android:id="@+id/get_a"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_done"
            android:text="New question"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"/>




        <ImageView
            android:id="@+id/get_q"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_refresh"
            android:text="New question"/>



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/info_bar">

        <TextView
            android:id="@+id/questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textSize="24sp"
            android:textColor="#222222"
            android:gravity="center_horizontal"
            android:text="click the refresh icon to fetch a new question" />

        <TextView
            android:id="@+id/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/questions"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:visibility="invisible"
            android:textColor="#222222"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-thin" />




    </RelativeLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/clue_tiles"
    android:fadeScrollbars="true">

    <com.example.hcummings.questionairretest.AutoFitGridLayout
        android:id="@+id/answer_tiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"

        android:scrollbars="horizontal"
        android:scrollbarStyle="insideOverlay"
        app:columnCount="20"
         >

        </com.example.hcummings.questionairretest.AutoFitGridLayout>

</ScrollView>
    <com.example.hcummings.questionairretest.AutoFitGridLayout
        android:id="@+id/clue_tiles"
        android:layout_width="match_parent"
       android:layout_alignParentBottom="true"
        android:layout_height="150dp"
        app:horizontalSpace="1dp"
        app:verticalSpace="1dp"
        android:background="@android:color/transparent"
        app:columnCount="8">

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            app:mli_shape_color="#f9f9f9"
            app:mli_letter_color="#222222"
            android:layout_height="150dp" />

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:mli_letter_color="#222222"
            app:mli_shape_color="#f9f9f9"/>

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:mli_letter_color="#222222"
            app:mli_shape_color="#f9f9f9"/>

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:mli_letter_color="#222222"
            app:mli_shape_color="#f9f9f9"/>

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:mli_letter_color="#222222"
            app:mli_shape_color="#f9f9f9" />
        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            app:mli_shape_color="#f9f9f9"
            app:mli_letter_color="#222222"
            android:layout_height="150dp" />

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:mli_letter_color="#222222"
            app:mli_shape_color="#f9f9f9"/>

        <com.example.hcummings.questionairretest.MaterialLetterIcon
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:mli_letter_color="#222222"
            app:mli_shape_color="#f9f9f9"/>


        </com.example.hcummings.questionairretest.AutoFitGridLayout>.


</RelativeLayout>
