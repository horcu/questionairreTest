<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hcummings.questionairretest.MainActivity">

    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ebebeb">

        <ImageView
            android:id="@+id/get_a"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_done"
            android:text="New question"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"/>


        <ImageView
            android:id="@+id/get_q"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_refresh"
            android:text="New question"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/q_and_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/info_bar">

        <TextView
            android:id="@+id/questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textSize="24sp"
            android:textColor="#222222"
            android:gravity="left"
            android:text="click the refresh icon to fetch a new question \r\n  \r\n  \r\n To reveal the answer click the check icon " />

        <TextView
            android:id="@+id/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/questions"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:visibility="invisible"
            android:textColor="#222222"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-thin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clue_tiles">

        <com.example.hcummings.questionairretest.AutoFitGridLayout
            android:id="@+id/answer_tiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:scrollbars="horizontal"
            android:scrollbarStyle="insideOverlay"
            app:columnCount="8" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />

        </com.example.hcummings.questionairretest.AutoFitGridLayout>

        <com.example.hcummings.questionairretest.AutoFitGridLayout
            android:id="@+id/answer_tiles2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:scrollbars="horizontal"
            android:scrollbarStyle="insideOverlay"
            app:columnCount="8" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha=".7"
                android:background="#ebebeb"
                />

        </com.example.hcummings.questionairretest.AutoFitGridLayout>

    </RelativeLayout>

    <com.example.hcummings.questionairretest.AutoFitGridLayout
        android:id="@+id/clue_tiles"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        app:horizontalSpace="1dp"
        app:verticalSpace="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/transparent"
        app:columnCount="8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha=".7"/>

        </com.example.hcummings.questionairretest.AutoFitGridLayout>.

</RelativeLayout>
